<?xml version="1.0" encoding="UTF-8"?>
<Grid
    RowSpacing="0"
    ColumnSpacing="0"
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    IsVisible="true"
    x:Class="aclara_meters.view.viewMenuView">

    <Grid.RowDefinitions>
        <RowDefinition Height="92"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="64"/>
        <RowDefinition Height="64"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <!-- LOGO ACLARA -->
    <StackLayout
        x:Name="stack_TopInfo"
        BackgroundColor="#6aa2b8"
        Grid.Row="0"
        Grid.Column="0">
        <Image
            x:Name="img_LogoACL"
            Source="background_menu.png"
            HeightRequest="92"
            Opacity="0.2"
            InputTransparent="true"
            HorizontalOptions="Start"/>
    </StackLayout>

    <!-- MENU SCROLL -->
    <StackLayout
        x:Name="stack_Body"
        Grid.Row="1"
        Grid.Column="0">

        <ListView
            Margin="-16,0,-2,0"
            x:Name="navigationDrawerList"
            RowHeight="64"
            SeparatorVisibility="Default" 
            SeparatorColor="#6aa2b8"
            BackgroundColor="white">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout
                            VerticalOptions="FillAndExpand"
                            Orientation="Vertical">
                            <StackLayout
                                Orientation="Horizontal">
                                <Image
                                    Margin="3,4,0,0"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    Scale="1.1"
                                    VerticalOptions="CenterAndExpand"
                                    Source="{Binding Icon}"/>
                                <Label
                                    x:Name="textListColor"
                                    Margin="4,6,0,0"
                                    FontSize="22"
                                    VerticalOptions="CenterAndExpand"
                                    TextColor="#6aa2b8"
                                    Text="{Binding Title}"/>
                            </StackLayout>
                            <StackLayout Margin="-40,-12,0,40" HeightRequest="80">
                                <Image HeightRequest="2" BackgroundColor="#6aa2b8" />
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackLayout>

    <!-- SETTINGS -->
    <StackLayout
        x:Name="stack_Settings"
        BackgroundColor="#6aa2b8"
        Grid.Row="2"
        Grid.Column="0">
        <StackLayout
            Margin="10,0,0,0"
            Orientation="Horizontal"
            VerticalOptions="CenterAndExpand">

            <Image
                Source="settings_icon.png"
                WidthRequest="40"
                HeightRequest="36"
                Scale="0.95"/>
            <Label
                FontSize="23"
                Text="Settings"
                TextColor="White"
                VerticalTextAlignment="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer
                        x:Name="settings_button"
                        NumberOfTapsRequired="1" />
                </Label.GestureRecognizers>
            </Label>

        </StackLayout>
    </StackLayout>

    <!-- LOG OFF -->
    <StackLayout
        x:Name="stack_LogOff"
        BackgroundColor="#6aa2b8"
        Grid.Row="3"
        Grid.Column="0">
        <StackLayout
            Margin="10,0,0,0"
            Orientation="Horizontal"
            VerticalOptions="CenterAndExpand">

            <Image
                Source="logoff_icon.png"
                WidthRequest="40"
                HeightRequest="36"
                Scale="0.95"/>
            <Label
                FontSize="23"
                Text="Loff Off"
                TextColor="White"
                VerticalTextAlignment="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer
                        x:Name="logout_button"
                        NumberOfTapsRequired="1" />
                </Label.GestureRecognizers>
            </Label>

        </StackLayout>
    </StackLayout>

