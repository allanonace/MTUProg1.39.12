<?xml version="1.0" encoding="utf-8"?>
<util:BasePage xmlns="http://xamarin.com/schemas/2014/forms" 
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
               xmlns:util="clr-namespace:aclara_meters.util;assembly=aclara_meters" 
               Title="{Binding PageTitle}" 
               NavigationPage.HasBackButton="false" 
               xmlns:local="clr-namespace:aclara_meters;assembly=aclara_meters" 
               xmlns:Controls="clr-namespace:aclara_meters" 
               xmlns:behaviors="clr-namespace:aclara_meters.Behaviors" 
               x:Class="aclara_meters.view.AclaraViewAddMTU"
               xmlns:views="clr-namespace:aclara_meters.view;assembly=aclara_meters">
    <RelativeLayout IsVisible="true">
        <ContentView IsVisible="true" x:Name="background_scan_page" RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent,&#xA;                                     Property=Width,&#xA;                                     Factor=0}" RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent,&#xA;                                     Property=Width,&#xA;                                     Factor=1}" RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent,&#xA;                                     Property=Height,&#xA;                                     Factor=0}" RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent,&#xA;                                     Property=Height,&#xA;                                     Factor=1}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="menu_controller_width" Width="0" />
                </Grid.ColumnDefinitions>
                <StackLayout Opacity="1" BackgroundColor="White" Grid.Row="0" Grid.Column="1" Margin="-6,0,0,0" Orientation="Vertical">
                    <views:TopBar x:Name="TopBar"/>
                    <ListView Margin="0,0,0,68" x:Name="listaMTUread" IsVisible="false" HasUnevenRows="true" SeparatorVisibility="None" SeparatorColor="#6aa2b8">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout IsVisible="{Binding isDisplayed}" Orientation="Vertical" Margin="0,5,5,0">
                                        <!--HeightRequest="{Binding Height}"-->
                                        <StackLayout IsVisible="{Binding isMeter}" Margin="0,5,5,0">
                                            <Label Text="{Binding Description}" Margin="14,4,0,0" VerticalOptions="Center" Font="Bold,20" />
                                            <BoxView BackgroundColor="#7a868c" HeightRequest="1" Margin="8,-4,24,0" />
                                        </StackLayout>
                                        <StackLayout IsVisible="{Binding isMTU}">
                                            <Label Text="{Binding Title}" Margin="14,0,0,0" VerticalOptions="Center" Font="Bold,20" />
                                            <Label Text="{Binding Description}" Margin="14,-4,0,0" FontSize="18" VerticalOptions="Center"
                                            BackgroundColor="{Binding BackgroundColor}" TextColor="{Binding FontColor}" />
                                        </StackLayout>
                                        <StackLayout IsVisible="{Binding isDetailMeter}">
                                            <Label Text="{Binding Title}" Margin="36,0,0,0" VerticalOptions="Center" Font="Bold,19" />
                                            <Label Text="{Binding Description}" Margin="36,-4,0,0" FontSize="17" VerticalOptions="Center"
                                            BackgroundColor="{Binding BackgroundColor}" TextColor="{Binding FontColor}"/>
                                        </StackLayout>
                                    </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <StackLayout Orientation="Vertical" x:Name="ReadMTUChangeView" IsVisible="true" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                        <StackLayout Margin="0,0,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="48"/>
                                </Grid.RowDefinitions>
                                <StackLayout Orientation="Horizontal" VerticalOptions="FillAndExpand" >
                                <Label WidthRequest="100"  HeightRequest="46" x:Name="port1label" Margin="0,0,0,0"  VerticalOptions="Center" HorizontalOptions="StartAndExpand" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="22"
                                    TextColor="#6aa2b8" Opacity="1">
                                </Label>
                                <Label x:Name="port2label" WidthRequest="100" HeightRequest="46" Margin="0,0,0,0" VerticalOptions="Center" HorizontalOptions="StartAndExpand" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="19"
                                    TextColor="#6aa2b8" Opacity="0.5">
                                </Label>
                                <Label x:Name="valvelabel"  WidthRequest="100" HeightRequest="46" Margin="0,0,0,0" VerticalOptions="Center" HorizontalOptions="StartAndExpand" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="19"
                                    TextColor="#6aa2b8" Opacity="0.5">
                                </Label>
                                <Label x:Name="misclabel" HeightRequest="46" Margin="0,0,10,0"  VerticalOptions="Center" HorizontalOptions="EndAndExpand" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="19" TextColor="#6aa2b8"
                                    Opacity="0.5">
                                </Label>
                                </StackLayout>
                            </Grid>
                            <Image Margin="-16,-4,-16,0" WidthRequest="380" HeightRequest="2" BackgroundColor="#6aa2b8" />
                        </StackLayout>
                        <ScrollView Margin="0,-6,0,-6">
                            <StackLayout>
                                <!--                   -->
                                <!--      Port 1       -->
                                <!--                   -->
                                <StackLayout IsVisible="true" Margin="0,0,0,0">
                                    <StackLayout x:Name="port1view" IsVisible="true" Margin="12,0,12,0">
                                        <StackLayout Orientation="Horizontal">
                                           <Label Margin="0,16,0,8" FontSize="22" HorizontalOptions="StartAndExpand" TextColor="#6aa2b8" x:Name="name_of_window_port1" Text="Add MTU" />
                                        </StackLayout>
                                        <!-- Account Number / Service Port ID -->
                                        <StackLayout x:Name="div_AccountNumber">
                                        <Label Text="Service Port ID" Margin="0,4,0,0" x:Name="lb_AccountNumber" VerticalOptions="Center" FontAttributes="Bold" FontSize="17" />
                                        <Frame CornerRadius="6" HeightRequest="30" Margin="0,4,0,0" BackgroundColor="#7a868c">
                                            <Frame CornerRadius="6" HeightRequest="30" Margin="-7" BackgroundColor="White">
                                                <StackLayout Margin="1" BackgroundColor="White" Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                                                    <!-- Debug -->
                                                    <ImageButton IsVisible="{Binding DebugMode}" BackgroundColor="Transparent"
                                                    HeightRequest="60" Source="auto.png" Clicked="AutoFillTextbox" />
                                                    <Controls:BorderlessEntry Margin="0,0,0,0" Text="" Keyboard="Numeric" HeightRequest="40" x:Name="tbx_AccountNumber" 
                                                                              VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Placeholder="" 
                                                                              PlaceholderColor="#7a868c" FontSize="17" HorizontalTextAlignment="Start">
                                                        <Controls:BorderlessEntry.Behaviors>
                                                            <behaviors:EntryValidatorBehavior />
                                                        </Controls:BorderlessEntry.Behaviors>
                                                    </Controls:BorderlessEntry>
                                                    <ImageButton CommandParameter="tbx_AccountNumber" IsVisible="{Binding BarCodeEnabled}" HeightRequest="56" Source="scanner1.png" Clicked="BarCodeScanner" />
                                                </StackLayout>
                                            </Frame>
                                        </Frame>
                                        </StackLayout>
                                        <!-- Account Number / Service Port ID - Dual Entry -->
                                        <StackLayout x:Name="div_AccountNumber_Dual">
                                            <Label Text="Repeat Service Port ID" x:Name="lb_AccountNumber_Dual" Margin="0,4,0,0" VerticalOptions="Center" FontAttributes="Bold" FontSize="17" />
                                            <Frame CornerRadius="6" HeightRequest="30" Margin="0,4,0,0" BackgroundColor="#7a868c">
                                                <Frame CornerRadius="6" HeightRequest="30" Margin="-7" BackgroundColor="White">
                                                    <StackLayout Margin="1" BackgroundColor="White" Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                                                        <Controls:BorderlessEntry Margin="0,0,0,0" Text="" Keyboard="Numeric" HeightRequest="40" x:Name="tbx_AccountNumber_Dual" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Placeholder="" PlaceholderColor="#7a868c" FontSize="17"
                                                            HorizontalTextAlignment="Start">
                                                            <Controls:BorderlessEntry.Behaviors>
                                                                <behaviors:EntryValidatorBehavior />
                                                            </Controls:BorderlessEntry.Behaviors>
                                                        </Controls:BorderlessEntry>
                                                        <ImageButton CommandParameter="tbx_AccountNumber_Dual" IsVisible="{Binding BarCodeEnabled}" HeightRequest="56" Source="scanner1.png" Clicked="BarCodeScanner" />
                                                    </StackLayout>
                                                </Frame>
                                            </Frame>
                                            <Label HorizontalTextAlignment="Start" TextColor="Red" x:Name="lb_AccountNumber_DualError" IsVisible="false" FontSize="12" Margin="12,0,0,0" />
                                        </StackLayout>
                                        <!-- Work Order / Field Order -->
                                        <StackLayout x:Name="div_WorkOrder">
                                            <Label Text="Field Order" Margin="0,4,0,0" x:Name="lb_WorkOrder" VerticalOptions="Center" FontAttributes="Bold" FontSize="17" />
                                            <Frame CornerRadius="6" HeightRequest="30" Margin="0,4,0,0" BackgroundColor="#7a868c">
                                                <Frame CornerRadius="6" HeightRequest="30" Margin="-7" BackgroundColor="White">
                                                    <StackLayout Margin="1" BackgroundColor="White" Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                                                        <Controls:BorderlessEntry Margin="0,0,0,0" Text="" HeightRequest="40" x:Name="tbx_WorkOrder" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Placeholder="" PlaceholderColor="#7a868c" Keyboard="Text" FontSize="17"
                                                            HorizontalTextAlignment="Start">
                                                            <Controls:BorderlessEntry.Behaviors>
                                                                <behaviors:EntryValidatorBehavior />
                                                            </Controls:BorderlessEntry.Behaviors>
                                                        </Controls:BorderlessEntry>
                                                        <ImageButton CommandParameter="tbx_WorkOrder" IsVisible="{Binding BarCodeEnabled}" HeightRequest="56" Source="scanner1.png" Clicked="BarCodeScanner" />
                                                    </StackLayout>
                                                </Frame>
                                            </Frame>
                                        </StackLayout>
                                        <!-- Work Order / Field Order - Dual -->
                                        <StackLayout x:Name="div_WorkOrder_Dual">
                                            <Label Text="Field Order" Margin="0,4,0,0" x:Name="lb_WorkOrder_Dual" VerticalOptions="Center" FontAttributes="Bold" FontSize="17" />
                                            <Frame CornerRadius="6" HeightRequest="30" Margin="0,4,0,0" BackgroundColor="#7a868c">
                                                <Frame CornerRadius="6" HeightRequest="30" Margin="-7" BackgroundColor="White">
                                                    <StackLayout Margin="1" BackgroundColor="White" Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                                                        <Controls:BorderlessEntry Margin="0,0,0,0" Text="" HeightRequest="40" x:Name="tbx_WorkOrder_Dual" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Placeholder="" PlaceholderColor="#7a868c" Keyboard="Text" FontSize="17"
                                                            HorizontalTextAlignment="Start">
                                                            <Controls:BorderlessEntry.Behaviors>
                                                                <behaviors:EntryValidatorBehavior />
                                                            </Controls:BorderlessEntry.Behaviors>
                                                        </Controls:BorderlessEntry>
                                                         <ImageButton CommandParameter="tbx_WorkOrder_Dual" IsVisible="{Binding BarCodeEnabled}" HeightRequest="56" Source="scanner1.png" Clicked="BarCodeScanner" />
                                                    </StackLayout>
                                                </Frame>
                                            </Frame>
                                            <Label HorizontalTextAlignment="Start" TextColor="Red" x:Name="lb_WorkOrder_DualError" IsVisible="false" FontSize="12" Margin="12,0,0,0" />
                                        </StackLayout>
                                        <!-- Old MTU ID -->
                                        <StackLayout x:Name="div_OldMtuId" IsVisible="false">
                                            <Label Text="Old MTU ID" Margin="0,12,0,0" x:Name="lb_OldMtuId" VerticalOptions="Center" FontAttributes="Bold" FontSize="17" />
                                            <Frame CornerRadius="6" HeightRequest="30" Margin="0,4,0,0" BackgroundColor="#7a868c">
                                                <Frame CornerRadius="6" HeightRequest="30" Margin="-7" BackgroundColor="White">
                                                    <StackLayout Margin="1" BackgroundColor="White" Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                                                        <Controls:BorderlessEntry Display="old" Margin="0,0,0,0" Text="" HeightRequest="40" x:Name="tbx_OldMtuId" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Placeholder="" PlaceholderColor="#7a868c" FontSize="17" HorizontalTextAlignment="Start">
                                                            <Controls:BorderlessEntry.Behaviors>
                                                                <behaviors:EntryValidatorBehavior />
                                                            </Controls:BorderlessEntry.Behaviors>
                                                        </Controls:BorderlessEntry>
                                                         <ImageButton CommandParameter="tbx_OldMtuId" IsVisible="{Binding BarCodeEnabled}" HeightRequest="56" Source="scanner1.png" Clicked="BarCodeScanner" />
                                                    </StackLayout>
                                                </Frame>
                                            </Frame>
                                        </StackLayout>
                                        <!-- Old Meter Serial Number -->
                                        <StackLayout x:Name="div_OldMeterSerialNumber" IsVisible="false">
                                            <Label Text="Old Meter #" x:Name="lb_OldMeterSerialNumber" Margin="0,12,0,0" VerticalOptions="Center" FontAttributes="Bold" FontSize="17" />
                                            <Frame CornerRadius="6" HeightRequest="30" Margin="0,4,0,0" BackgroundColor="#7a868c">
                                                <Frame CornerRadius="6" HeightRequest="30" Margin="-7" BackgroundColor="White">
                                                    <StackLayout Margin="1" BackgroundColor="White" Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                                                        <Controls:BorderlessEntry Display="old" Margin="0,0,0,0" Text="" HeightRequest="40" x:Name="tbx_OldMeterSerialNumber" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Placeholder="" PlaceholderColor="#7a868c" FontSize="17" HorizontalTextAlignment="Start">
                                                            <Controls:BorderlessEntry.Behaviors>
                                                                <behaviors:EntryValidatorBehavior />
                                                            </Controls:BorderlessEntry.Behaviors>
                                                        </Controls:BorderlessEntry>
                                                         <ImageButton CommandParameter="tbx_OldMeterSerialNumber" IsVisible="{Binding BarCodeEnabled}" HeightRequest="56" Source="scanner1.png" Clicked="BarCodeScanner" />
                                                    </StackLayout>
                                                </Frame>
                                            </Frame>
                                        </StackLayout>
                                        <!-- Old Meter Serial Number - Dual -->
                                        <StackLayout x:Name="div_OldMeterSerialNumber_Dual" IsVisible="false">
                                            <Label Text="Old Meter #" x:Name="lb_OldMeterSerialNumber_Dual" Margin="0,12,0,0" VerticalOptions="Center" FontAttributes="Bold" FontSize="17" />
                                            <Frame CornerRadius="6" HeightRequest="30" Margin="0,4,0,0" BackgroundColor="#7a868c">
                                                <Frame CornerRadius="6" HeightRequest="30" Margin="-7" BackgroundColor="White">
                                                    <StackLayout Margin="1" BackgroundColor="White" Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                                                        <Controls:BorderlessEntry Display="old" Margin="0,0,0,0" Text="" HeightRequest="40" x:Name="tbx_OldMeterSerialNumber_Dual" VerticalOptions="CenterAndExpand"
                                                        HorizontalOptions="FillAndExpand" Placeholder="" PlaceholderColor="#7a868c" FontSize="17" HorizontalTextAlignment="Start">
                                                            <Controls:BorderlessEntry.Behaviors>
                                                                <behaviors:EntryValidatorBehavior />
                                                            </Controls:BorderlessEntry.Behaviors>
                                                        </Controls:BorderlessEntry>
                                                        <ImageButton CommandParameter="tbx_OldMeterSerialNumber_Dual" IsVisible="{Binding BarCodeEnabled}" HeightRequest="56" Source="scanner1.png" Clicked="BarCodeScanner" />
                                                    </StackLayout>
                                                </Frame>
                                            </Frame>
                                            <Label HorizontalTextAlignment="Start" TextColor="Red" x:Name="lb_OldMeterSerialNumber_DualError" IsVisible="false" FontSize="12" Margin="12,0,0,0" />
                                        </StackLayout>
                                        <!-- Old Meter Working -->
                                        <StackLayout x:Name="div_OldMeterWorking" IsVisible="false">
                                            <Label Text="Old Meter Working" x:Name="lb_OldMeterWorking" Margin="0,4,0,0" VerticalOptions="Center" FontAttributes="Bold" FontSize="17" />
                                            <Frame CornerRadius="6" HeightRequest="30" Margin="0,4,0,0" BackgroundColor="#7a868c">
                                                <Frame CornerRadius="6" HeightRequest="30" Margin="-7" BackgroundColor="White">
                                                    <StackLayout Margin="1" BackgroundColor="White" Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                                                        <Controls:BorderlessPicker x:Name="pck_OldMeterWorking" Title="" HorizontalOptions="FillAndExpand" FontSize="17" HeightRequest="40" />
                                                    </StackLayout>
                                                </Frame>
                                            </Frame>
                                        </StackLayout>
                                        <!-- Old Meter Reading / Initial Reading -->
                                        <StackLayout x:Name="div_OldMeterReading" IsVisible="false">
                                            <Label Text="Old Reading" x:Name="lb_OldMeterReading" Margin="0,12,0,0" VerticalOptions="Center" FontAttributes="Bold" FontSize="17" />
                                            <Frame CornerRadius="6" HeightRequest="30" Margin="0,4,0,0" BackgroundColor="#7a868c">
                                                <Frame CornerRadius="6" HeightRequest="30" Margin="-7" BackgroundColor="White" x:Name="divSub_OldMeterReading">
                                                    <StackLayout Margin="1" BackgroundColor="White" Orientation="Horizontal" HorizontalOptions="FillAndExpand" >
                                                        <Controls:BorderlessEntry Display="old" Margin="0,0,0,0" Text="" HeightRequest="40" x:Name="tbx_OldMeterReading"
                                                        VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Placeholder="" PlaceholderColor="#7a868c" Keyboard="Numeric" FontSize="17" />
                                                        <ImageButton CommandParameter="tbx_OldMeterReading" IsVisible="{Binding BarCodeEnabled}" HeightRequest="56" Source="scanner1.png" Clicked="BarCodeScanner" />
                                                    </StackLayout>
                                                </Frame>
                                            </Frame>
                                            <Label HorizontalTextAlignment="Start" TextColor="Red" x:Name="lb_OldMeterReading_MeterType" IsVisible="false" FontSize="12" Margin="12,0,0,0" />
                                        </StackLayout>
                                        <!-- Old Meter Reading / Initial Reading - Dual -->
                                        <StackLayout x:Name="div_OldMeterReading_Dual" IsVisible="false">
                                            <Label Text="Old Reading" x:Name="lb_OldMeterReading_Dual" Margin="0,12,0,0" VerticalOptions="Center" FontAttributes="Bold" FontSize="17" />
                                            <Frame CornerRadius="6" HeightRequest="30" Margin="0,4,0,0" BackgroundColor="#7a868c">
                                                <Frame CornerRadius="6" HeightRequest="30" Margin="-7" BackgroundColor="White" x:Name="divSub_OldMeterReading_Dual">
                                                    <StackLayout Margin="1" BackgroundColor="White" Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                                                        <Controls:BorderlessEntry Display="old" Margin="0,0,0,0" Text="" HeightRequest="40" x:Name="tbx_OldMeterReading_Dual" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Placeholder="" PlaceholderColor="#7a868c" Keyboard="Numeric" FontSize="17"
                                                            HorizontalTextAlignment="Start">
                                                            <Controls:BorderlessEntry.Behaviors>
                                                                <behaviors:EntryValidatorBehavior />
                                                            </Controls:BorderlessEntry.Behaviors>
                                                        </Controls:BorderlessEntry>
                                                        <ImageButton CommandParameter="tbx_OldMeterReading_Dual" IsVisible="{Binding BarCodeEnabled}" HeightRequest="56" Source="scanner1.png" Clicked="BarCodeScanner" />
                                                    </StackLayout>
                                                </Frame>
                                            </Frame>
                                            <Label HorizontalTextAlignment="Start" TextColor="Red" x:Name="lb_OldMeterReading_DualError" IsVisible="false" FontSize="12" Margin="12,0,0,0" />
                                            <Label HorizontalTextAlignment="Start" TextColor="Red" x:Name="lb_OldMeterReading_DualMeterType" IsVisible="false" FontSize="12" Margin="12,0,0,0" />
                                        </StackLayout>
                                        <!-- Replace Meter|Register -->
                                        <StackLayout x:Name="div_ReplaceMeterRegister" IsVisible="false">
                                            <Label Text="Replace Meter / Register" x:Name="lb_ReplaceMeterRegister" Margin="0,4,0,0" VerticalOptions="Center" FontAttributes="Bold" FontSize="17" />
                                            <Frame CornerRadius="6" HeightRequest="30" Margin="0,4,0,4" BackgroundColor="#7a868c">
                                                <Frame CornerRadius="6" HeightRequest="30" Margin="-7" BackgroundColor="White">
                                                    <StackLayout Margin="1" BackgroundColor="White" Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                                                        <Controls:BorderlessPicker x:Name="pck_ReplaceMeterRegister" Title="" HorizontalOptions="FillAndExpand" FontSize="17" HeightRequest="40" />
                                                    </StackLayout>
                                                </Frame>
                                            </Frame>
                                        </StackLayout>
                                        <!-- ( New ) Meter Serial Number -->
                                        <StackLayout x:Name="div_MeterSerialNumber">
                                            <Label Text="Meter Number" x:Name="lb_MeterSerialNumber" Margin="0,4,0,0" VerticalOptions="Center" FontAttributes="Bold" FontSize="17" />
                                            <Frame CornerRadius="6" HeightRequest="30" Margin="0,4,0,0" BackgroundColor="#7a868c">
                                                <Frame CornerRadius="6" HeightRequest="30" Margin="-7" BackgroundColor="White">
                                                    <StackLayout Margin="1" BackgroundColor="White" Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                                                        <Controls:BorderlessEntry Margin="0,0,0,0" Text="" HeightRequest="40" x:Name="tbx_MeterSerialNumber" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Placeholder="" PlaceholderColor="#7a868c" Keyboard="Text" FontSize="17"
                                                            HorizontalTextAlignment="Start">
                                                            <Controls:BorderlessEntry.Behaviors>
                                                                <behaviors:EntryValidatorBehavior />
                                                            </Controls:BorderlessEntry.Behaviors>
                                                        </Controls:BorderlessEntry>
                                                        <ImageButton CommandParameter="tbx_MeterSerialNumber" IsVisible="{Binding BarCodeEnabled}" HeightRequest="56" Source="scanner1.png" Clicked="BarCodeScanner" />
                                                    </StackLayout>
                                                </Frame>
                                            </Frame>
                                        </StackLayout>
                                        <!-- ( New ) Meter Serial Number - Dual -->
                                        <StackLayout x:Name="div_MeterSerialNumber_Dual">
                                            <Label Text="Meter Number" x:Name="lb_MeterSerialNumber_Dual" Margin="0,4,0,0" VerticalOptions="Center" FontAttributes="Bold" FontSize="17" />
                                            <Frame CornerRadius="6" HeightRequest="30" Margin="0,4,0,0" BackgroundColor="#7a868c">
                                                <Frame CornerRadius="6" HeightRequest="30" Margin="-7" BackgroundColor="White">
                                                    <StackLayout Margin="1" BackgroundColor="White" Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                                                        <Controls:BorderlessEntry Margin="0,0,0,0" Text="" HeightRequest="40" x:Name="tbx_MeterSerialNumber_Dual" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Placeholder="" PlaceholderColor="#7a868c" Keyboard="Text" FontSize="17"
                                                            HorizontalTextAlignment="Start">
                                                            <Controls:BorderlessEntry.Behaviors>
                                                                <behaviors:EntryValidatorBehavior />
                                                            </Controls:BorderlessEntry.Behaviors>
                                                        </Controls:BorderlessEntry>
                                                        <ImageButton CommandParameter="tbx_MeterSerialNumber_Dual" IsVisible="{Binding BarCodeEnabled}" HeightRequest="56" Source="scanner1.png" Clicked="BarCodeScanner" />
                                                    </StackLayout>
                                                </Frame>
                                            </Frame>
                                            <Label HorizontalTextAlignment="Start" TextColor="Red" x:Name="lb_MeterSerialNumber_DualError" IsVisible="false" FontSize="12" Margin="12,0,0,0" />
                                        </StackLayout>
                                        <!-- Meter Type -->
                                        <StackLayout Margin="0,0,0,0">
                                            <StackLayout HorizontalOptions="FillAndExpand" Margin="0,4,0,0" x:Name="div_MeterType" />
                                        </StackLayout>
                                        <!-- ( New ) Meter Reading / Initial Reading -->
                                        <StackLayout x:Name="div_MeterReadings">
                                            <Label Text="Meter Reading" x:Name="lb_MeterReading" Margin="0,4,0,0" VerticalOptions="Center" FontAttributes="Bold" FontSize="17" />
                                            <Frame CornerRadius="6" HeightRequest="30" Margin="0,4,0,0" BackgroundColor="#7a868c">
                                                <Frame CornerRadius="6" HeightRequest="30" Margin="-7" BackgroundColor="White" x:Name="div_MeterReading">
                                                    <StackLayout Margin="1" BackgroundColor="White" Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                                                        <Controls:BorderlessEntry Margin="0,0,0,0" Text="" HeightRequest="40" x:Name="tbx_MeterReading" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Placeholder="" PlaceholderColor="#7a868c" Keyboard="Numeric" FontSize="17"
                                                            HorizontalTextAlignment="Start">
                                                            <Controls:BorderlessEntry.Behaviors>
                                                                <behaviors:EntryValidatorBehavior />
                                                            </Controls:BorderlessEntry.Behaviors>
                                                        </Controls:BorderlessEntry>
                                                        <ImageButton x:Name="btnScanMeterReading" IsEnabled="false" CommandParameter="tbx_MeterReading" IsVisible="{Binding BarCodeEnabled}" HeightRequest="56" Source="scanner1.png" Clicked="BarCodeScanner" />
                                                    </StackLayout>
                                                </Frame>
                                            </Frame>
                                            <Label HorizontalTextAlignment="Start" TextColor="Red" x:Name="lb_MeterReading_MeterType" IsVisible="false" FontSize="12" Margin="12,0,0,0" />
                                            <!-- ( New ) Meter Reading / Initial Reading - Dual -->
                                            <StackLayout x:Name="div_MeterReading_Dual" IsVisible="false">
                                                <Label Text="Meter Reading" x:Name="lb_MeterReading_Dual" Margin="0,4,0,0" VerticalOptions="Center" FontAttributes="Bold" FontSize="17" />
                                                <Frame CornerRadius="6" HeightRequest="30" Margin="0,4,0,0" BackgroundColor="#7a868c">
                                                    <Frame CornerRadius="6" HeightRequest="30" Margin="-7" BackgroundColor="White" x:Name="divSub_MeterReading_Dual">
                                                        <StackLayout Margin="1" BackgroundColor="White" Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                                                            <Controls:BorderlessEntry Margin="0,0,0,0" Text="" HeightRequest="40" x:Name="tbx_MeterReading_Dual" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Placeholder="" PlaceholderColor="#7a868c" Keyboard="Numeric" FontSize="17"
                                                                HorizontalTextAlignment="Start">
                                                                <Controls:BorderlessEntry.Behaviors>
                                                                    <behaviors:EntryValidatorBehavior />
                                                                </Controls:BorderlessEntry.Behaviors>
                                                            </Controls:BorderlessEntry>
                                                            <ImageButton x:Name="btnScanMeterReadingDual" IsEnabled="false" CommandParameter="tbx_MeterReading_Dual" IsVisible="{Binding BarCodeEnabled}" HeightRequest="56" Source="scanner1.png" Clicked="BarCodeScanner" />
                                                        </StackLayout>
                                                    </Frame>
